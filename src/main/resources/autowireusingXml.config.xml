<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- autowiring  using by name, by type, by constructor  -->

    <bean class="com.springCore.autowiring.usingXml.HomeAdrress" name="homeAdrress">
        <property name="street" value="husainpur"/>
        <property name="city" value="etah"/>
    </bean>

    <bean class="com.springCore.autowiring.usingXml.Customer" name="customer" autowire="byName"></bean>

</beans>
